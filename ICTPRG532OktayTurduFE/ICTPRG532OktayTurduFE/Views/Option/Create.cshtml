@model ICTPRG532OktayTurduFE.Models.DTO.OptionCreate

@{
    ViewData["Title"] = "Create";

    List<SelectListItem> questionSelect = ViewBag.QuestionSelect;
}

<h1>Create</h1>

<h4>Create an Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OptionText" class="control-label">Option Text</label>
                <input asp-for="OptionText" class="form-control" />
                <span asp-validation-for="OptionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionLetter" class="control-label">Option Letter</label>
                <input asp-for="OptionLetter" class="form-control" />
                <span asp-validation-for="OptionLetter" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCorrect" /> @Html.DisplayNameFor(model => model.IsCorrect)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label">Question ID</label>
                <select asp-for="QuestionID" asp-items="@questionSelect" class="form-control"></select>
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
